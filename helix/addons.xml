<addon
  id="skin.aeon.nox.5.maniac"
  version="5.6.0-1.12"
  name="Aeon Nox 5 - Maniac"
  provider-name="Maniac">
	<requires>
		<import addon="xbmc.gui" version="5.3.0"/>
		<import addon="script.grab.fanart" version="0.14.1"/>
		<import addon="script.skinshortcuts" version="0.4.5"/>
		<import addon="service.library.data.provider" version="0.0.9"/>
	</requires>
	<extension
	  point="xbmc.gui.skin"
	  debugging="false"
	  effectslowdown="0.75">
		<res width="1920" height="1080" aspect="16:9" default="true" folder="1080i" />
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Aeon Nox 5: Maniac</summary>
		<description lang="en">This skin is a fork of BigNoid's Aeon Nox 5: Redux for Kodi. Skin will be kept up-to-date with BigNoid's changes, with the addition of my LiveTV mod. There is also a White-theme included.</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
